<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:foregroundTint="#D0A8A8"
    android:textAlignment="center"
    android:textDirection="inherit"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/micImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="127dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewOutput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/function3"
        app:srcCompat="@drawable/baseline_mic_24" />

    <TextView
        android:id="@+id/textViewOutput"
        android:layout_width="336dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/textboxdesign"
        android:hint="Output"
        android:outlineProvider="paddedBounds"
        android:shadowRadius="20"
        android:textColor="#000000"
        android:textSize="20sp"
        app:circularflow_defaultRadius="5dp"
        app:circularflow_radiusInDP="5dp"
        android:paddingLeft="12dp"
        android:paddingTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/link_gemini"
        android:layout_width="165dp"
        android:layout_height="158dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/buttondesign"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/openai"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instruction_btn" />

    <Button
        android:id="@+id/function2"
        android:layout_width="165dp"
        android:layout_height="158dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/buttondesign"
        android:fontFamily="@font/poppins_bold"
        android:text="function 2"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instruction_btn" />

    <Button
        android:id="@+id/function3"
        android:layout_width="165dp"
        android:layout_height="158dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/buttondesign"
        android:fontFamily="@font/poppins_bold"
        android:text="function3"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/link_gemini" />

    <Button
        android:id="@+id/function4"
        android:layout_width="165dp"
        android:layout_height="158dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/buttondesign"
        android:fontFamily="@font/poppins_bold"
        android:text="function4"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/function2" />

    <ImageView
        android:id="@+id/instruction_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="176dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/scannerbtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="38dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_document_scanner_24" />

</androidx.constraintlayout.widget.ConstraintLayout>